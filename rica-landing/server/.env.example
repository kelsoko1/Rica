# Server Configuration
PORT=8080
NODE_ENV=development
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/rica

# JWT Configuration
JWT_SECRET=change-this-in-production
JWT_EXPIRES_IN=1d

# Device Discovery Configuration
DISCOVERY_INTERVAL=60
DISCOVERY_TIMEOUT=5
DISCOVERY_RETRIES=3
DISCOVERY_CONCURRENT_SCANS=10
NETWORK_RANGES=192.168.1.0/24
EXCLUDED_IPS=192.168.1.1,192.168.1.254

# Data Collection Configuration
COLLECTION_INTERVAL=300
COLLECTION_TIMEOUT=30
COLLECTION_RETRIES=3
COLLECTION_BATCH_SIZE=10
COLLECTION_MAX_CONCURRENT=5

# OpenCTI Configuration
OPENCTI_URL=http://localhost:4000
OPENCTI_GRAPHQL_ENDPOINT=/graphql
OPENCTI_API_KEY=your-opencti-api-key
OPENCTI_CONNECTOR_ID=rica-device-connector

# OpenBAS Configuration
OPENBAS_URL=http://localhost:3000
OPENBAS_API_ENDPOINT=/api
OPENBAS_API_KEY=your-openbas-api-key

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIRECTORY=logs

# Security Configuration
ENCRYPTION_KEY=change-this-in-production
SALT_ROUNDS=10

# Cache Configuration
CACHE_TTL=300
CACHE_CHECK_PERIOD=60

# ClickPesa Configuration (for backward compatibility)
CLICKPESA_WEBHOOK_SECRET=your_webhook_secret
