{
  "name": "rica-api-server",
  "version": "1.0.0",
  "description": "Production API server for Rica with device linking capabilities",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "lint": "eslint src/**/*.js",
