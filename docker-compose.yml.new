version: '3.8'
services:
  rica-api:
    build: ./rica-api
    ports:
      - "${API_PORT:-3001}:3001"
    environment:
      - NODE_ENV=production
      - OPENCTI_GRAPHQL_URL=${OPENCTI_GRAPHQL_URL:-http://host.docker.internal:4000/graphql}
      - OPENBAS_API_URL=${OPENBAS_API_URL:-http://host.docker.internal:8080/api}
      - OLLAMA_URL=${OLLAMA_URL:-http://host.docker.internal:11434}
      - API_KEY=${API_KEY:-changeme-in-production}
      - DEEPSEEK_API_KEY=${DEEPSEEK_API_KEY}
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "wget", "--spider", "-q", "http://localhost:3001/api/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 10s
    volumes:
      - rica-api-data:/app/data
    networks:
      - rica-network
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"

  rica-ui:
    build: ./rica-ui
    ports:
      - "${UI_PORT:-80}:80"
    environment:
      - NODE_ENV=production
      - REACT_APP_API_URL=${REACT_APP_API_URL:-http://localhost:3001}
    restart: unless-stopped
    depends_on:
      - rica-api
    healthcheck:
      test: ["CMD", "wget", "--spider", "-q", "http://localhost:80"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 10s
    networks:
      - rica-network
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"

  rica-landing:
    build: ./rica-landing
    ports:
      - "${LANDING_PORT:-8080}:80"
    environment:
      - NODE_ENV=production
      - REACT_APP_API_URL=${REACT_APP_API_URL:-http://localhost:3001}
      - REACT_APP_CLICKPESA_API_KEY=${REACT_APP_CLICKPESA_API_KEY:-}
      - REACT_APP_ENCRYPTION_KEY=${REACT_APP_ENCRYPTION_KEY:-production-encryption-key}
      - REACT_APP_ANALYTICS_KEY=${REACT_APP_ANALYTICS_KEY:-}
      - REACT_APP_SENTRY_DSN=${REACT_APP_SENTRY_DSN:-}
    restart: unless-stopped
    depends_on:
      - rica-api
    healthcheck:
      test: ["CMD", "wget", "--spider", "-q", "http://localhost:80"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 10s
    networks:
      - rica-network
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"

volumes:
  rica-api-data:

networks:
  rica-network:
    driver: bridge
